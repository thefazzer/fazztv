# Production Environment Configuration

# API Keys (use production keys - DO NOT COMMIT)
OPENROUTER_API_KEY=your_production_openrouter_key
OPENAI_API_KEY=your_production_openai_key
STREAM_KEY=your_production_youtube_stream_key

# Paths (using block storage)
DATA_DIR=/mnt/block-storage/fazztv/data
CACHE_DIR=/mnt/block-storage/fazztv/cache
LOG_DIR=/var/log/fazztv

# Video Settings (production quality)
BASE_RESOLUTION=1920x1080
FPS=30
FADE_LENGTH=3

# Download Settings
SEARCH_LIMIT=10
MEDIA_DURATION=180

# Marquee Settings
MARQUEE_DURATION=15
SCROLL_SPEED=3

# Logging
LOG_FILE=fazztv-prod.log
LOG_LEVEL=INFO
LOG_MAX_SIZE=50MB

# Feature Flags
ENABLE_EQUALIZER=true
ENABLE_CACHING=true
ENABLE_LOGO=true

# RTMP Settings
# YouTube RTMP URL will be built with STREAM_KEY
# Format: rtmp://a.rtmp.youtube.com/live2/{STREAM_KEY}