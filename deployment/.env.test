# Test Environment Configuration

# API Keys (use test keys)
OPENROUTER_API_KEY=test_openrouter_key_here
OPENAI_API_KEY=test_openai_key_here
STREAM_KEY=test_stream_key_here

# Paths
DATA_DIR=/opt/fazztv/data
CACHE_DIR=/opt/fazztv/cache
LOG_DIR=/opt/fazztv/logs

# Video Settings (lower quality for testing)
BASE_RESOLUTION=1280x720
FPS=30
FADE_LENGTH=3

# Download Settings
SEARCH_LIMIT=5
MEDIA_DURATION=60

# Marquee Settings
MARQUEE_DURATION=10
SCROLL_SPEED=5

# Logging
LOG_FILE=fazztv-test.log
LOG_LEVEL=DEBUG
LOG_MAX_SIZE=10MB

# Feature Flags
ENABLE_EQUALIZER=false
ENABLE_CACHING=true
ENABLE_LOGO=false

# RTMP Settings (test stream)
# Leave empty to disable streaming in test