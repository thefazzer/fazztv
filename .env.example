#!/bin/bash
# HollowCityDriver Environment Configuration
# Copy this file to .env and adjust values as needed

# Gemini MCP Timeout Configuration
# Default: 14400 seconds (4 hours) - current implementation default
# Recommended values by project size:
#   - Small projects (<1000 files): 7200 (2 hours)
#   - Medium projects (1000-5000 files): 21600 (6 hours)
#   - Large projects (5000-20000 files): 28800 (8 hours)
#   - Enterprise codebases (>20000 files): 36000 (10 hours)
#
# For high complexity tasks, the system automatically applies a 1.5x multiplier
# So a base timeout of 21600s becomes 32400s for complex analysis
export HOLLOW_CD_GEMINI_MCP_TIMEOUT=21600

# Other timeout configurations
export HOLLOW_CD_TIMEOUT=900              # General timeout: 15 minutes
export HOLLOW_CD_MCP_TIMEOUT=5400         # Standard MCP timeout: 90 minutes
export HOLLOW_CD_HEARTBEAT_TIMEOUT=300    # Heartbeat timeout: 5 minutes

# Git workflow configuration
export HOLLOW_CITY_DRIVER_GIT_WORKFLOW=true

# Audit injection configuration
export HOLLOW_CITY_DRIVER_ENABLE_AUDIT_INJECTION=true